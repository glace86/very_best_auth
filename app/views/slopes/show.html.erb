<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @slope.name %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>ID</dt>
              <dd><%= @slope.id %></dd>

              <dt>Points</dt>
              <dd><%= @slope.pow_points %></dd>

              <dt>Town</dt>
              <dd><%= @slope.town %></dd>

              <dt>State</dt>
              <dd><%= @slope.state %></dd>

              <dt>Picture</dt>
              <dd><img src="<%= @slope.pic %>"  height="200" width="200"></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/slopes" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/slopes/<%= @slope.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_slope/<%= @slope.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>

      <ul class="list-group">
      <% @slope.favorites.each do |favorite| %>
        <li class="list-group-item">
          <%= favorite.user.username %> likes <%= favorite.dish.name %>
        </li>
      <% end %>
      </ul>

    </div>
  </div>
</div>

<!-- End responsive panel example -->
